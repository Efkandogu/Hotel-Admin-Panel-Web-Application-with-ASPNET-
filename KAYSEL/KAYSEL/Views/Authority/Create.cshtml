@model KAYSEL.Models.Authority

@{
    ViewBag.Title = "Create";
}

<h2>Add Authority</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Authority</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h3>Guest Information</h3>

    <div class="form-group">
        <label class="control-label col-md-2">First Name and Surname</label>
        <div class="col-md-10">
            <input type="text" name="nameandsurname" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Authority Level</label>
        <div class="col-md-10">
            <input type="text" name="authoritylevel" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Authority Start Date</label>
        <div class="col-md-10">
            <input type="date" name="authoritystart" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Authority End</label>
        <div class="col-md-10">
            <input type="date" name="authorityend" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Authority Status</label>
        <div class="col-md-10">
            <input type="text" name="authoritystatus" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Is Deleted</label>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsDeleted)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
    }
    
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
